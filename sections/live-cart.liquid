<div class="my-cart bg-[#fff] z-[2000] h-[100dvh] md:w-[350px] w-full no-scrollbar overflow-scroll">
  {% render 'cart-header' %}
  <div
    class="flex flex-col justify-between h-full pb-10  pr-0 pt-[40px] lg:pt-[50px] px-[20px] sm:px-[40px]"
    data-ajax-cart-section
  >
    <div class="my-cart__items " data-ajax-cart-section-scroll>
      <div class="text-xs uppercase">Summary</div>
      {% for line_item in cart.items %}
        {%
          render 'cart-card' with { product: line_item
          , index: forloop.index }
        %}
      {% endfor %}
    </div>
    <div class="flex gap-2 justify-center align-middle w-full">
      {% form 'cart', cart, id: 'my-ajax-cart-form' %}
        <button
          class="caption flex w-full text-xs lg:text-md h-el  pl-4 pr-4 justify-center items-center bg-c3 bg-opacity-50 rounded-lg py-4 backdrop-blur-lg "
          type="submit"
          name="checkout"
        >
          Checkout â€” {{ cart.total_price | money_with_currency }}
        </button>
      {% endform %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "My Ajax cart"
}
{% endschema %}

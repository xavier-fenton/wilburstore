{% comment %} [&:nth-child(3n-2)] {% endcomment %}
<div class="px-[20px] pt-[50px] sm:flex sm:flex-col md:grid md:grid-cols-2 lg:grid-cols-4 gap-[20px]">
  {% for collection in collections %}
    <div class="col-span-2 h-full [&:nth-child(2n)]:col-span-2 [&:nth-child(3n-2)]:col-span-4 [&:nth-child(3n-2)]:col-end-4 lg:[&:nth-child(3n-2)]:col-start-2">
      <div class="flex flex-col-reverse pb-[20px]">
        <div class="pt-[10px] pl-[10px] !text-[10px]">{{- collection.title | link_to: collection.url }}</div>
        {% if collection.featured_image %}
          {{ collection.featured_image | image_url: width: 700 | image_tag | link_to: collection.url }}
        {% else %}
          <div>
            <img src="{{ 'example.jpg' | asset_url }}">
          </div>
        {% endif %}
      </div>
    </div>
  {% endfor %}
</div>
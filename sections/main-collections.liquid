
<div class='pt-[84px] px-[20px] sm:px-[40px] grid grid-cols-2 sm:grid-flow-dense sm:grid-cols-2 gap-4 p-2'>
   {% for collection in collections %}
    <div class="flex flex-col-reverse gap-2">
      <div>{{- collection.title | link_to: collection.url }}</div>
      {% if collection.featured_image %}
        {{ collection.featured_image | image_url: width: 700 | image_tag }}
      {% else %}
        <div>
          <img src="{{ 'example.jpg' | asset_url }}">
        </div>
      {% endif %}
    </div>
  {% endfor %} 


</div>
{% if collection.all_products_count > 0 %}
  {% render 'title' with { title: collection.title } %}
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-y-5 gap-x-5 px-[80px] pb-[80px]">


    {% render 'product-card' %}


  </div>
{% else %}
  <div>
    {% render 'title' with { title: collection.title } %}
    <div class=" px-[80px] py-[80px]">

      <p>Sorry, there are no products in this collection</p>
    </div>
  </div>
{% endif %}
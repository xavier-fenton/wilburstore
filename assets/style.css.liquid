.hero-image-section img {
  width: 100%;
  height: 100vh;
  object-fit: cover;
}

img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  max-height: calc(120vh);
}

/* cart */

.my-cart {
  position: fixed;
  right: -1000px;
  top: 7px;
  cursor: pointer;
  width: calc(400px);
  height: calc(var(--winHeight) - 14px);
  transition: ease all 0.3s;
  overflow: hidden;
}

.cart-open {
  width: calc(400px);
  height: calc(var(--winHeight) - 14px);
  overflow: scroll;
  transition: right 0.3s;
  right: 7px;
}

